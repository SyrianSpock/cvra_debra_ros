<?xml version="1.0"?>
<robot name="arm_forearm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Included URDF/XACRO Files -->
  <xacro:include
    filename="$(find debra_description)/urdf/common_properties.xacro" />

  <xacro:macro name="arm_forearm"
               params="lr parent translateX translateY flipY">
  <!--lr: left, right -->
    <link name="${lr}_arm_forearm">
      <visual>
        <origin xyz="0 0 0"
                rpy="${flipY * M_PI / 2} 0 0" />
        <geometry>
          <box size="${arm_forearm_x_size}
                     ${arm_forearm_y_size}
                     ${arm_forearm_z_size}" />
        </geometry>
        <material name="Blue" />
      </visual>
      <collision>
        <origin xyz="0 0 0"
                rpy="${flipY * M_PI / 2} 0 0" />
        <geometry>
          <box size="${arm_forearm_x_size}
                     ${arm_forearm_y_size}
                     ${arm_forearm_z_size}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${arm_forearm_mass}" />
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <box_inertia m="${arm_forearm_mass}"
                     x="${arm_forearm_x_size}"
                     y="${arm_forearm_y_size}"
                     z="${arm_forearm_z_size}"/>
      </inertial>
    </link>

    <gazebo reference="${lr}_arm_forearm">
      <mu1 value="0.2"/>
      <mu2 value="0.2"/>
      <material>Gazebo/Blue</material>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <joint name="${parent}_${lr}_arm_forearm_joint"
           type="revolute">
      <parent link="${parent}"/>
      <child link="${lr}_arm_forearm"/>
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <axis xyz="0 0 1"
            rpy="0 0 0" />
      <limit effort="1000.0"
             lower="${arm_forearm_limit_lower}"
             upper="${arm_forearm_limit_upper}"
             velocity="0.5" />
      <origin xyz="${translateX * arm_forearm_x_origin_to_base_origin}
                   ${translateY * arm_forearm_y_origin_to_base_origin}
                   ${arm_forearm_z_origin_to_base_origin}"
              rpy="0 0 0" />
    </joint>

    <!-- Transmission is important to link the joints and the controller -->
    <transmission name="${parent}_${lr}_arm_forearm_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${parent}_${lr}_arm_forearm_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${parent}_${lr}_arm_forearm_joint_motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>
</robot>
