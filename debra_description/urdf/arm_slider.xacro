<?xml version="1.0"?>
<robot name="arm_slider" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Included URDF/XACRO Files -->
  <xacro:include
    filename="$(find debra_description)/urdf/common_properties.xacro" />

  <!-- Wheels -->
  <xacro:macro name="arm_slider"
               params="lr parent translateX translateY flipY">
  <!--lr: left, right -->
    <link name="${lr}_arm_slider">
      <visual>
        <origin xyz="0 0 0"
                rpy="${flipY * M_PI / 2} 0 0" />
        <geometry>
          <box size="${arm_slider_x_size}
                     ${arm_slider_y_size}
                     ${arm_slider_z_size}" />
        </geometry>
        <material name="Blue" />
      </visual>
      <collision>
        <origin xyz="0 0 0"
                rpy="${flipY * M_PI / 2} 0 0" />
        <geometry>
          <box size="${arm_slider_x_size}
                     ${arm_slider_y_size}
                     ${arm_slider_z_size}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${arm_slider_mass}" />
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <box_inertia m="${arm_slider_mass}"
                     x="${arm_slider_x_size}"
                     y="${arm_slider_y_size}"
                     z="${arm_slider_z_size}"/>
      </inertial>
    </link>

    <gazebo reference="${lr}_arm_slider">
      <mu1 value="0.2"/>
      <mu2 value="0.2"/>
      <material>Gazebo/Blue</material>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <joint name="${lr}_arm_slider_joint"
           type="prismatic">
      <parent link="${parent}"/>
      <child link="${lr}_arm_slider"/>
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <limit effort="1000.0"
             lower="-0.38"
             upper="0"
             velocity="0.5" />
      <origin xyz="${translateX * arm_slider_x_origin_to_wheel_origin}
                   ${translateY * arm_slider_y_origin_to_wheel_origin}
                   ${arm_slider_z_origin_to_wheel_origin}"
              rpy="0 0 0" />
    </joint>

    <!-- Transmission is important to link the joints and the controller -->
    <transmission name="${parent}_${lr}_arm_slider_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${parent}_${lr}_arm_slider_joint" />
      <actuator name="${parent}_${lr}_arm_slider_joint_motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>
</robot>
